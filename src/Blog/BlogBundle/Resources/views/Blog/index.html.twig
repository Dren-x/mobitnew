{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Blog list</h1>

    <table class="table table table-hover">
        <thead>
            <tr>
                <th>Title</th>

                <th>Author</th>
                <th>Blog</th>
                <th>Tags</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>

                <td>{{ entity.title }}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.blog }}</td>

                <td>{{ entity.tags }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>

                <td>
                <ul>
                    <li>
                        <a href="{{ path('blog_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('blog_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('blog_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
