{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Новости</h1>

    <table class="records_list">
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Заголовок</th>
                <th>Текст</th>
                <th>Опубликовано</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
               {# <td><a href="{{ path('post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
                <td>{{ entity.title }}</td>
                <td>{{ entity.body }}</td>
                <td>{% if entity.publishedAt %}{{ entity.publishedAt|date('d-m-Y') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('post_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('post_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('post_new') }}">
                Добавить новость
            </a>
        </li>
    </ul>
    {% endblock %}
